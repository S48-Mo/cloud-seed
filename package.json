{
  "name": "@space48/cloud-seed",
  "version": "0.2.3",
  "description": "Cloud infrastructure automation tool that uses Terraform CDK.",
  "main": "index.js",
  "bin": {
    "cloud-seed": "dist/bin/entrypoint.js"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/Space48/cloud-seed",
  "scripts": {
    "prebuild": "cdktf get",
    "prepublishOnly": "npm run build",
    "build": "rimraf dist && tsc",
    "lint": "eslint './**/*.ts' --fix",
    "lint:ci": "eslint './**/*.ts'",
    "test": "jest --passWithNoTests"
  },
  "engines": {
    "node": "12"
  },
  "author": "Ash Smith <ash@space48.com>",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/functions-framework": "^1.7.1",
    "arg": "^5.0.0",
    "cdktf": "0.1.0",
    "cdktf-cli": "^0.1.0",
    "constructs": "^3.3.43",
    "esbuild": "^0.12.6",
    "glob": "^7.1.6",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "ts-jest": "^26.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
